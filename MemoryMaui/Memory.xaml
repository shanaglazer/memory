<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MemoryMaui.Memory"
             Title="Memory">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="LightSteelBlue"/>
                <Setter Property="CornerRadius" Value="0"/>
                <Setter Property="Padding" Value="5"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid ColumnDefinitions="*,*,*,*,*,*" RowDefinitions="*,*,*,*,*,*">
        
        
        <Button x:Name="btn1" Grid.Column="0" Grid.Row="0" Clicked="Button_Clicked" BindingContext="{Binding lstCards[0]}" Text="{Binding lstCards[0].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[0].Enabled}" TextColor="{Binding FontColorMaui}"/>
        <Button x:Name="btn2" Grid.Column="1" Grid.Row="0" Clicked="Button_Clicked" BindingContext="{Binding lstCards[1]}" Text="{Binding lstCards[1].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[1].Enabled}" TextColor="{Binding FontColorMaui}"/>
        <Button x:Name="btn3" Grid.Column="2" Grid.Row="0" Clicked="Button_Clicked" BindingContext="{Binding lstCards[2]}" Text="{Binding lstCards[2].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[2].Enabled}" TextColor="{Binding FontColorMaui}"/>
        <Button x:Name="btn4" Grid.Column="3" Grid.Row="0" Clicked="Button_Clicked" BindingContext="{Binding lstCards[3]}" Text="{Binding lstCards[3].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[3].Enabled}" TextColor="{Binding FontColorMaui}"/>
        <Button x:Name="btn5" Grid.Column="4" Grid.Row="0" Clicked="Button_Clicked" BindingContext="{Binding lstCards[4]}" Text="{Binding lstCards[4].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[4].Enabled}" TextColor="{Binding FontColorMaui}"/>
        <Button x:Name="btn6" Grid.Column="5" Grid.Row="0" Clicked="Button_Clicked" BindingContext="{Binding lstCards[5]}" Text="{Binding lstCards[5].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[5].Enabled}" TextColor="{Binding FontColorMaui}"/>
                                                                                    
        <Button x:Name="btn7" Grid.Column="0" Grid.Row="1" Clicked="Button_Clicked" BindingContext="{Binding lstCards[6]}" Text="{Binding lstCards[6].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[6].Enabled}" TextColor="{Binding FontColorMaui}"/>
        <Button x:Name="btn8" Grid.Column="1" Grid.Row="1" Clicked="Button_Clicked" BindingContext="{Binding lstCards[7]}" Text="{Binding lstCards[7].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[7].Enabled}" TextColor="{Binding FontColorMaui}"/>
        <Button x:Name="btn9" Grid.Column="2" Grid.Row="1" Clicked="Button_Clicked" BindingContext="{Binding lstCards[8]}" Text="{Binding lstCards[8].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[8].Enabled}" TextColor="{Binding FontColorMaui}"/>
        <Button x:Name="btn10" Grid.Column="3" Grid.Row="1" Clicked="Button_Clicked" BindingContext="{Binding lstCards[9]}" Text="{Binding lstCards[9].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[9].Enabled}" TextColor="{Binding FontColorMaui}"/>
        <Button x:Name="btn11" Grid.Column="4" Grid.Row="1" Clicked="Button_Clicked" BindingContext="{Binding lstCards[10]}" Text="{Binding lstCards[10].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[10].Enabled}" TextColor="{Binding FontColorMaui}"/>
        <Button x:Name="btn12" Grid.Column="5" Grid.Row="1" Clicked="Button_Clicked" BindingContext="{Binding lstCards[11]}" Text="{Binding lstCards[11].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[11].Enabled}" TextColor="{Binding FontColorMaui}"/>
                                                                                     
        <Button x:Name="btn13" Grid.Column="0" Grid.Row="2" Clicked="Button_Clicked" BindingContext="{Binding lstCards[12]}" Text="{Binding lstCards[12].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[12].Enabled}" TextColor="{Binding FontColorMaui}"/>
        <Button x:Name="btn14" Grid.Column="1" Grid.Row="2" Clicked="Button_Clicked" BindingContext="{Binding lstCards[13]}" Text="{Binding lstCards[13].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[13].Enabled}" TextColor="{Binding FontColorMaui}"/>
        <Button x:Name="btn15" Grid.Column="2" Grid.Row="2" Clicked="Button_Clicked" BindingContext="{Binding lstCards[14]}" Text="{Binding lstCards[14].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[14].Enabled}" TextColor="{Binding FontColorMaui}"/>
        <Button x:Name="btn16" Grid.Column="3" Grid.Row="2" Clicked="Button_Clicked" BindingContext="{Binding lstCards[15]}" Text="{Binding lstCards[15].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[15].Enabled}" TextColor="{Binding FontColorMaui}"/>
        <Button x:Name="btn17" Grid.Column="4" Grid.Row="2" Clicked="Button_Clicked" BindingContext="{Binding lstCards[16]}" Text="{Binding lstCards[16].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[16].Enabled}" TextColor="{Binding FontColorMaui}"/>
        <Button x:Name="btn18" Grid.Column="5" Grid.Row="2" Clicked="Button_Clicked" BindingContext="{Binding lstCards[17]}" Text="{Binding lstCards[17].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[17].Enabled}" TextColor="{Binding FontColorMaui}"/>
                                                                                     
        <Button x:Name="btn19" Grid.Column="0" Grid.Row="3" Clicked="Button_Clicked" BindingContext="{Binding lstCards[18]}" Text="{Binding lstCards[18].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[18].Enabled}" TextColor="{Binding FontColorMaui}"/>
        <Button x:Name="btn20" Grid.Column="1" Grid.Row="3" Clicked="Button_Clicked" BindingContext="{Binding lstCards[19]}" Text="{Binding lstCards[19].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[19].Enabled}" TextColor="{Binding FontColorMaui}"/>
        <Button x:Name="btn21" Grid.Column="2" Grid.Row="3" Clicked="Button_Clicked" BindingContext="{Binding lstCards[20]}" Text="{Binding lstCards[20].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[20].Enabled}" TextColor="{Binding FontColorMaui}"/>
        <Button x:Name="btn22" Grid.Column="3" Grid.Row="3" Clicked="Button_Clicked" BindingContext="{Binding lstCards[21]}" Text="{Binding lstCards[21].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[21].Enabled}" TextColor="{Binding FontColorMaui}"/>
        <Button x:Name="btn23" Grid.Column="4" Grid.Row="3" Clicked="Button_Clicked" BindingContext="{Binding lstCards[22]}" Text="{Binding lstCards[22].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[22].Enabled}" TextColor="{Binding FontColorMaui}"/>
        <Button x:Name="btn24" Grid.Column="5" Grid.Row="3" Clicked="Button_Clicked" BindingContext="{Binding lstCards[23]}" Text="{Binding lstCards[23].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[23].Enabled}" TextColor="{Binding FontColorMaui}"/>
                                                                                     
        <Button x:Name="btn25" Grid.Column="0" Grid.Row="4" Clicked="Button_Clicked" BindingContext="{Binding lstCards[24]}" Text="{Binding lstCards[24].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[24].Enabled}" TextColor="{Binding FontColorMaui}"/>
        <Button x:Name="btn26" Grid.Column="1" Grid.Row="4" Clicked="Button_Clicked" BindingContext="{Binding lstCards[25]}" Text="{Binding lstCards[25].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[25].Enabled}" TextColor="{Binding FontColorMaui}"/>
        <Button x:Name="btn27" Grid.Column="2" Grid.Row="4" Clicked="Button_Clicked" BindingContext="{Binding lstCards[26]}" Text="{Binding lstCards[26].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[26].Enabled}" TextColor="{Binding FontColorMaui}"/>
        <Button x:Name="btn28" Grid.Column="3" Grid.Row="4" Clicked="Button_Clicked" BindingContext="{Binding lstCards[27]}" Text="{Binding lstCards[27].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[27].Enabled}" TextColor="{Binding FontColorMaui}"/>
        <Button x:Name="btn29" Grid.Column="4" Grid.Row="4" Clicked="Button_Clicked" BindingContext="{Binding lstCards[28]}" Text="{Binding lstCards[28].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[28].Enabled}" TextColor="{Binding FontColorMaui}"/>
        <Button x:Name="btn30" Grid.Column="5" Grid.Row="4" Clicked="Button_Clicked" BindingContext="{Binding lstCards[29]}" Text="{Binding lstCards[29].CardText}" BackgroundColor="{Binding BackColorMaui}" IsEnabled="{Binding lstCards[29].Enabled}" TextColor="{Binding FontColorMaui}"/>

        <Button x:Name="StartGameBtn" Text="Start Game" Grid.Column="4" Grid.Row="5" Style="{StaticResource Key=special-button}" Clicked="Button_Clicked_Start"/>
        <Button x:Name="SwitchTurnBtn" Text="Switch Turn" Grid.Column="5" Grid.Row="5" Style="{StaticResource Key=special-button}" Clicked="Button_Clicked_Switch"/>

        <Border Grid.Column="2" Grid.Row="5" Grid.ColumnSpan="2" Stroke="darkblue">
            <Grid ColumnDefinitions="*,*" RowDefinitions="*,*" Grid.Column="2" Grid.Row="5" Grid.ColumnSpan="2">
                <Label Text="Player A Score:" Grid.Column="0" Grid.Row="0" HorizontalOptions="Center"/>
                <Label Text="Player B Score:" Grid.Column="1" Grid.Row="0" HorizontalOptions="Center"/>
                <Label x:Name="lblAScore" Grid.Column="0" Grid.Row="1" HorizontalOptions="Center" Text="{Binding ScoreA}"/>
                <Label x:Name="lblBScore" Grid.Column="1" Grid.Row="1" HorizontalOptions="Center" Text="{Binding ScoreB}"/>
            </Grid>
        </Border>
        <Label x:Name="lblMessage" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="2" Text="{Binding GameStatusDesc}"/>
    </Grid>
</ContentPage>